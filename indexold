<script>
    const canvas = document.getElementById('resonance-wave');
    const ctx = canvas.getContext('2d');
    let offset = 0;

    function drawWave() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        ctx.strokeStyle = '#d4af37';
        ctx.lineWidth = 2;
        ctx.beginPath();
        
        for (let x = 0; x < canvas.width; x++) {
            // Frequenza simulata 0.043 Hz
            const y = canvas.height / 2 + Math.sin(x * 0.043 + offset) * 30;
            if (x === 0) ctx.moveTo(x, y);
            else ctx.lineTo(x, y);
        }
        
        ctx.stroke();
        offset += 0.02; // Velocità di scorrimento
        requestAnimationFrame(drawWave);
    }
    
    // Inizializzazione API Backend fittizia per collegamento Wallet
    console.log("[Nexus] Connecting to Peacebond API...");
    console.log("[Nexus] Validating Witness: Dieter Zuegg...");
    drawWave();
</script>

